{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "run-app",
			"type": "shell",
			"command": "py",
			"args": [
				"-m",
				"lightroom_tool",
				"--help"
			],
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			},
			"problemMatcher": []
		},
		{
			"label": "run-tests",
			"type": "shell",
			"command": "py",
			"args": [
				"-m",
				"pytest",
				"tests/",
				"-v"
			],
			"group": "test",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			},
			"problemMatcher": []
		}
	]
}